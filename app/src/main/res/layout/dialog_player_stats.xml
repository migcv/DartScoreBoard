<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical" >


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:text="PlayerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/playerName"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Score per turn:"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:id="@+id/textView5"
            android:textSize="16sp"
            android:layout_width="115dp" />

        <TextView
            android:text="###"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scoreTurn"
            android:layout_weight="1"
            android:textStyle="normal|bold"
            android:textSize="18sp" />
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Best house:"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:id="@+id/textView5"
            android:textSize="16sp" />

        <TextView
            android:text="###"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/preferedHouse"
            android:layout_weight="1"
            android:textStyle="normal|bold"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Best turn:"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:id="@+id/textView5"
            android:textSize="16sp" />

        <TextView
            android:text="###"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bestTurn"
            android:layout_weight="1"
            android:textStyle="normal|bold"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Worst turn:"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:id="@+id/textView5"
            android:textSize="16sp" />

        <TextView
            android:text="###"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/worstTurn"
            android:layout_weight="1"
            android:textStyle="normal|bold"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Hits on x1:"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:id="@+id/textView5"
            android:textSize="16sp" />

        <TextView
            android:text="###"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/x1Hits"
            android:layout_weight="1"
            android:textStyle="normal|bold"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Hits on x2:"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:id="@+id/textView5"
            android:textSize="16sp" />

        <TextView
            android:text="###"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/x2Hits"
            android:layout_weight="1"
            android:textStyle="normal|bold"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Hits on x3:"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:id="@+id/textView5"
            android:textSize="16sp" />

        <TextView
            android:text="###"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/x3Hits"
            android:layout_weight="1"
            android:textStyle="normal|bold"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Throws missed:"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:id="@+id/textView5"
            android:textSize="16sp" />

        <TextView
            android:text="###"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/throwsMissed"
            android:layout_weight="1"
            android:textStyle="normal|bold"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Total Throws:"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:id="@+id/textView5"
            android:textSize="16sp" />

        <TextView
            android:text="###"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/totalThrows"
            android:layout_weight="1"
            android:textStyle="normal|bold"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>