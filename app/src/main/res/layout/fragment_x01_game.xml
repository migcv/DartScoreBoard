<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_players"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="pt.migcv.dartscoreboard.fragments.x01.SelectScoreFragment">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/headline"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <TextView
            android:text="PlayerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playerName"
            android:textAllCaps="true"
            android:textStyle="normal|bold"
            android:textSize="20sp" />

        <TextView
            android:text="Score:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:id="@+id/textView6"
            android:textSize="18sp"
            android:layout_weight="1.57"
            android:textAlignment="textEnd" />

        <TextView
            android:text="####"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/headline"
            android:layout_alignParentStart="true"
            android:id="@+id/playerScore"
            android:textAlignment="textEnd"
            android:textStyle="normal|bold"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/headline">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="1st Throw:"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textSize="18sp" />

            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/throw1"
                android:maxLength="2"
                android:selectAllOnFocus="false" />

            <Button
                android:text="Missed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/missedButton1"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="x2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/x2Button1"
                android:layout_weight="1"
                android:backgroundTint="@color/blueButton" />

            <Button
                android:text="x3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/x3Button1"
                android:layout_weight="1"
                android:backgroundTint="@color/redButton" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="2nd Throw:"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textSize="18sp" />

            <EditText
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/throw2"
                android:maxLength="2"
                android:layout_width="100dp" />

            <Button
                android:text="Missed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/missedButton2"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="x2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/x2Button2"
                android:layout_weight="1"
                android:backgroundTint="@color/blueButton" />

            <Button
                android:text="x3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/x3Button2"
                android:layout_weight="1"
                android:backgroundTint="@color/redButton" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="3rd Throw:"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textSize="18sp" />

            <EditText
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:maxLength="2"
                android:id="@+id/throw3"
                android:layout_width="100dp" />

            <Button
                android:text="Missed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/missedButton3"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="x2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/x2Button3"
                android:layout_weight="1"
                android:backgroundTint="@color/blueButton" />

            <Button
                android:text="x3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/x3Button3"
                android:layout_weight="1"
                android:backgroundTint="@color/redButton" />
        </LinearLayout>

        <Button
            android:text="End Turn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/endTurn"
            android:backgroundTint="#096A47"
            android:textColor="@android:color/background_light"
            android:textSize="20sp" />
    </LinearLayout>

</RelativeLayout>